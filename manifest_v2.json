{
    "manifest_version"   :               2 ,
    "name"               : "OHR checker v2",
    "short_name"         : "ORH",
    "description"        : "Manifest v2 ‚óè onHeadersReceived checker",
    "author"             : "Ivan Wellesz",

    "version"            : "230909",
    "permissions"        : [
        "activeTab",


        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",






        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ],



    "declarative_net_request": {
        "rule_resources"      : [
            {
                "id"               : "rules1_SET",
                "path"             : "rules1_SET.json",
                "enabled"          :  true
            },
            {
                "id"               : "rules2_REMOVE",
                "path"             : "rules2_REMOVE.json",
                "enabled"          :  true
            }

        ]
    },
    "icons"              : {
        "32": "images/icon.png"
    },
    "background"         : {
        "scripts"         : [ "javascript/background.js" ]

    },
    "browser_action"     : {
        "default_title"   : "OHR checker",
        "default_popup"   : "popup.html",
        "default_icon"    : "images/icon.png"
    }
}
